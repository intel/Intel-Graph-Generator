<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Intel&#xae; Graph Generator Client" Height="100" Width="400"
        Closing="OnClose">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Margin="10" Click="OnCreateGraphs" HorizontalContentAlignment="Center">
            <TextBlock TextAlignment="Center" TextWrapping="Wrap">Create Graphs</TextBlock>
        </Button>
        
    </Grid>
</Window>
